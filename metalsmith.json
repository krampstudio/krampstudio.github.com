{
  "source": "src",
  "destination": "dist",
  "plugins": {
    "metalsmith-collections": {
      "posts" : {
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-layouts": {
      "default": "layout.hbs",
      "pattern": "**/*.html"
    },
    "metalsmith-permalinks": {
      "linksets": [{
        "match": {
          "collection": "posts"
        },
        "pattern": "posts/:title"
      }]
    }
  }
}
