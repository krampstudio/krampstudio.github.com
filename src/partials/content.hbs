<article>

    <header>
        <h1>{{title}}</h1>

        <div class="post-meta">    
        {{#if date}}<time datetime="{{date}}">{{date}}</time>{{/if}}
        {{#if author}}<span>{{author}}</span>{{/if}}
        </div>

    </header>

    {{{content}}}

    {{#if sharing}}
    <aside>
        twitter, g+, fb
    </aside>
    {{/if}}

    {{#if comments}}
    <aside>
        discuss
    </aside>
    {{/if}}

    <script type="text/javascript">
        document.location = 'index.html?state={{url}}';
    </script>

</article>
