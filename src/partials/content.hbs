<article>

    <header>
        <h1>{{title}}</h1>

        <div class="post-meta">    

        {{#if date}}<x-time datetime="{{date}}" format="ll"></x-time>{{/if}}
        {{#if author}}<x-author>{{author}}</x-author>{{/if}} 
        {{#if sharing}}<x-twitter-share url="{{fullUrl}}" content="{{title}}" author="{{author}}"></x-twitter-share>{{/if}}
        {{#if categories}}
            <div class="categories">
                {{#each categories}}
                <span>{{.}}</span>
                {{/each}}
            </div>
        {{/if}}
        </div>

    </header>

    {{{content}}}



    {{#if comments}}
    <x-disqus shortname="{{blogName}}" identifier="{{fileTitle}}" lang="{{lang}}" url="{{fullUrl}}"></x-disqus>   
    {{/if}}

    <script type="text/javascript">
        document.location = 'index.html?state={{url}}';
    </script>

</article>
