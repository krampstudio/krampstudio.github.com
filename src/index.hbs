<!DOCTYPE html>
<html lang="{{lang}}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>{{name}} - {{desc}}</title>
        <meta name="description" content="{{desc}}">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="{{paths.css}}main.css">
        <link rel="stylesheet" href="{{paths.js}}vendor/x-tag-code-prism/code-prism.css">

        <script src="{{paths.js}}vendor/x-tag-core/web-components-polyfills.js"></script>
        <script src="{{paths.js}}vendor/modernizr/modernizr.js"></script>
        <script src="{{paths.js}}vendor/history/scripts/bundled/html4+html5/native.history.js"></script>
        <script src="{{paths.js}}vendor/x-tag-core/core.js"></script>
        <script src="{{paths.js}}vendor/lodash/lodash.compat.js"></script>
        <script src="{{paths.js}}vendor/moment/moment-with-locales.min.js"></script>
        <script>moment.locale("{{lang}}");</script>
    </head>
    <body>
        <!--[if lt IE 9]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

            <header role="banner">
                <h1><a href="{{url}}">{{name}}</a></h1>
                <h2>{{desc}}</h2>
                <x-lang-switcher>
                    <x-lang value="fr"><img src="{{paths.img}}fr.png" alt="fr" /></x-lang>
                    <x-lang value="en"><img src="{{paths.img}}gb.png" alt="en" /><x-lang/>
                </x-lang-switcher>
            </header>

            <div class="main">

                {{> nav}}
                
                {{> aside}}


                <div id="content">
                    {{#each posts}}
                        {{> post-entry this}}
                    {{/each}}
                </div><!-- #content -->

            </div> <!-- #main -->
        </div> <!-- #main-container -->

        {{>footer}}

        <script src="{{paths.js}}components/x-load.js"></script>
        <script src="{{paths.js}}components/x-nav.js"></script>
        <script src="{{paths.js}}components/x-post-list.js"></script>
        <script src="{{paths.js}}components/x-lang-switcher.js"></script>
        <script src="{{paths.js}}components/x-analytics.js"></script>
        <script src="{{paths.js}}components/x-disqus.js"></script>
        <script src="{{paths.js}}components/x-author.js"></script>
        <script src="{{paths.js}}components/x-time.js"></script>
        <script src="{{paths.js}}vendor/x-tag-code-prism/code-prism.js"></script>
        
        <!-- Google Analytics: change UA-XXXXX-X to be your site's ID. -->
        <x-analytics code="UA-XXXXX-X" />

    </body>
</html>
